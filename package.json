{
  "name": "with-aws-creds",
  "version": "1.3.0",
  "description": "Seed project for TypeScript projects",
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "with-aws-creds": "./bin/with-aws-creds.js"
  },
  "scripts": {
    "build": "npm run buildUpdate && npm test && npm run typedoc",
    "buildUpdate": "npm run clean && npm run compile && npm run copyToDist",
    "test": "cross-env JEST_JUNIT_OUTPUT_DIR=./reports jest --coverage",
    "lint": "eslint . --ext .ts --fix",
    "compile": "tsc && npm run lint",
    "copyToDist": "copyfiles -f *.txt *.md package.json dist",
    "typedoc": "typedoc --exclude **/bin/**/*.ts --out ./docs ./src",
    "clean": "rimraf ./dist ./docs ./coverage ./reports",
    "prepare": "is-ci || husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szikszail/with-aws-creds.git"
  },
  "keywords": [
    "AWS",
    "credentials",
    "environment variables"
  ],
  "author": "Laszlo Szikszai <sziklaszlo@gmail.com>",
  "license": "MIT",
  "files": [
    "bin",
    "*.js"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "bugs": {
    "url": "https://github.com/szikszail/with-aws-creds/issues"
  },
  "homepage": "https://github.com/szikszail/with-aws-creds#readme",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^28.1.3",
    "jest-junit": "^14.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@aws-sdk/client-sts": "^3.193.0",
    "debug": "^4.3.4",
    "uuid": "^8.3.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/types.d.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
